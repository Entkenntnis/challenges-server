<%
const i18n = config.i18n
const join = i18n.join
%>

<!DOCTYPE html>
<html lang="<%= config.locale %>">
  <head>
    <%- include('commenHead') %>
    <title><%= i18n.title + ' - ' + join.title %></title>
  </head>
  <body>
    <div class="container">
      <%- include('header', {i18n}) %>
      <hr />
      <br>
      <h2><%= join.title %></h2>
      <br>
      <% if (messages.length > 0) { %>
        <div class="alert alert-danger"><%-messages.join('<br>')%></div>
      <% } %>
      <p>
      <form method="post" class="form-horizontal" autocomplete="off">
        <fieldset>
          <div class="form-group">
            <label for="inputName" class="col-md-2 control-label"><%= join.key %></label>
            <div class="col-md-4">
              <input class="form-control" id="inputName" type="text" name="room" value="<%=values.room%>">
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button type="submit" class="btn btn-success"><%= join.go %></button>
            </div>
          </div>
        </fieldset>
      </form>
      </p>
      
      <div style="height:40px"></div>
      
      <p><a href="/" class="btn btn-primary"><%= i18n.back %></a></p>
      
      <div style="height:40px"></div>
    </div>
  </body>
</htm>
 
