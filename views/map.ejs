<%
  const i18n = config.i18n
%>

<!DOCTYPE html>
<html lang="<%=config.locale%>">
  <head>
    <%- include('commenHead') %>
    <title><%= i18n.title %></title>
    <style type="text/css">
      .no-underline { text-decoration: none !important; }
      body { background-image:url(/background.jpg) }
    </style>
  </head>
  <body>
    <div class="container">
      <%- include('status', {i18n, user}) %>
      <%- include('header', {i18n}) %>
      <hr />
    </div>
    <div id="drawing" style="width:1600px;height:1200px;position:relative;">
      <%-map%>
      <span style="position:absolute;right:10px;bottom:10px;">
        <%= i18n.map.background %>
        <a href="http://www.flickr.com/photos/scotbot/9686457096">scotbot</a>
        (<a href="https://creativecommons.org/licenses/by/2.0/">CC BY 2.0</a>)
      </span>
    </div>
    
  </body>
</html>
