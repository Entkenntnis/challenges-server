
<% if (props.rooms.length > 0) { %>
  <h2><%=t.yourRooms%></h2>
  <ul>
  <% for (let room of props.rooms) { %>
    <li><%=room%></li>
  <% } %>
  </ul>
  <hr style="margin-bottom:30px"/>
<% } %>

<h2><%= t.title %></h2>

<% if (props.messages.length > 0) { %>
  <div class="alert alert-danger"><%-props.messages.join('<br>')%></div>
<% } %>

<p><%= t.information %></p>

<form method="post" class="form-horizontal" autocomplete="off">
  <fieldset>
    <div class="form-group">
      <label for="inputName" class="col-md-2 control-label"><%= t.key %></label>
      <div class="col-md-4">
        <input class="form-control" id="inputName" type="text" name="room" value="<%=props.values.room%>">
        <small><%=t.keyNote%></small>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-success"><%= t.go %></button>
      </div>
    </div>
    <input type="hidden" name="csrf" value="<%=props.token%>" />
  </fieldset>
</form>

<%- include('../backButton', {t}) %>
