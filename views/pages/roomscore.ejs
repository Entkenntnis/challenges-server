<%
  const highscore = App.config.i18n.highscore
%>

<%- include('../statusBar', {user, t:App.config.i18n.statusBar}) %>

<h2><%= t.heading %> <%= props.room %></h2>

<p class="my-4">[<a href="/highscore"><%=highscore.showGlobalScore%></a>]</p>

<% if (props.users.length == 0) { %>
  <p><%= highscore.empty%></p>
<% } else { %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"><%= highscore.rank %></th>
        <th scope="col"><%= highscore.name %></th>
        <th scope="col"><%= highscore.sessionScore %></th>
        <th scope="col">(<%= highscore.score %>)</th>
        <th scope="col"><%= highscore.lastActive %></th>
      </tr>
    </thead>
    <tbody>
      <% for (const u of props.users) { %>
        <tr <%-user &&u.name === user.name?'class="table-primary"':''%>>
          <td><%=u.rank%></td>
          <td><%=u.name%></td>
          <td><%=u.sessionScore%></td>
          <td>(<%=u.score%>)</td>
          <td><%=u.lastActive%></td>
        </tr>
      <% } %>
    </tbody>
  </table>
  
<% } %> 

<%- include('../backButton', {t}) %>
